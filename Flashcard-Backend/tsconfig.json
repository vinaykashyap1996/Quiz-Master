{
  "compilerOptions": {
    "target": "ES2019",           // or ES2020 if needed
    "module": "commonjs",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
 "include": ["src", "functions"]
}